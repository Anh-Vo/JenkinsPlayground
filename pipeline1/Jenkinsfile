pipeline {
  parameters{
      booleanParam(defaultValue: true, description: '', name: 'build_artifacts')
      booleanParam(defaultValue: true, description: '', name: 'build_container')
      booleanParam(defaultValue: true, description: '', name: 'deploy')
  }
  agent any
 
  // Adding this commment 
  // Adding another this commment 

  stages{
    stage ('Build Artifacts') {
    when { expression { return params.build_artifacts } }
      steps {
        echo 'Building Artifacts...' 
      }  
    }
    stage('Bulid Container') {
      when { expression { return params.build_container } }
      steps {
        echo 'Deploying Container...'
      } 
    }
    stage('Deploy') {
      when { expression { return params.deploy } }
      steps {
        echo 'Deploying...'
      } 
    }
  } // Stages
} // Pipeline
