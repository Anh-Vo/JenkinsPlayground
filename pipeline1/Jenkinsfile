pipeline {
  agent any
    parameters{
      booleanParam(defaultValue: true, description: '', name: 'build')
    }
  
  stages{
    when {build == true}
    stage ('Print Hello') {
      steps {
        echo 'Hello' 
      }  
    }

    stage('Print World') {
      when {build == false}
      steps {
        echo 'World!'
      } 
    }
  }
   
}
