pipeline {
  agent any
    parameters{
      
        booleanParam(defaultValue: true, description: '', name: 'build')
        booleanParam(defaultValue: true, description: '', name: 'deploy')
      
    }
  
  stages{
    when { ${build} == true}
    stage ('Build') {
      steps {
        echo 'Hello' 
      }  
    }

    stage('Deploy') {
      when { ${deploy} == true}
      steps {
        echo 'World!'
      } 
    }
  }
   
}
